{
  // ========================================
  // Task Centralization System Configuration
  // ========================================
  //
  // Copy this file to ~/.config/task-centralization/credentials.json
  // and customize with your values.
  //
  // NOTE: Remove all comments (lines starting with //) before use,
  // as standard JSON doesn't support comments.
  //
  // Granola credentials are auto-discovered from the Granola app.
  // You don't need to configure them here!

  // LLM Configuration (REQUIRED for enrichment)
  // ------------------------------------------
  // The LLM analyzes meetings to extract action items, decisions, and entities.
  //
  // Option 1: Use config file (shown below)
  // Option 2: Set PERPLEXITY_API_KEY environment variable
  //
  "llm": {
    "provider": "perplexity",           // Currently only "perplexity" is supported
    "api_key": "pplx-...",              // Get from https://www.perplexity.ai/settings/api
    "model": "sonar-pro"                // Options: sonar, sonar-pro, sonar-reasoning, sonar-reasoning-pro
                                        // Recommended: "sonar" for cost ($1/$1 per 1M tokens)
                                        // Default: "sonar-pro" for quality ($3/$15 per 1M tokens)
  },

  // Vault Configuration (OPTIONAL)
  // -------------------------------
  // By default, auto-detects Obsidian vault at ~/Obsidian/
  // Uncomment to override:
  //
  "vault": {
    "path": "/path/to/your-vault",                  // Absolute path to your Obsidian vault
    "inbox_meetings_path": "00_Inbox/Meetings"      // Where to write meeting notes
  },

  // User Information (OPTIONAL)
  // ----------------------------
  // Used for personalization in meeting notes
  //
  // "user": {
  //   "name": "Your Name",
  //   "email": "your.email@example.com"
  // },

  // Notion Integration (OPTIONAL - NOT YET IMPLEMENTED)
  // ----------------------------------------------------
  // Future feature: Backup meetings to Notion database
  //
  // "notion": {
  //   "api_key": "secret_...",          // Notion integration token
  //   "database_id": "...",              // Target database ID
  //   "enabled": false                   // Set to true to enable
  // }
}
